# API Gateway Environment Variables

# Flask Configuration
FLASK_ENV=production
PORT=5000
DEBUG=False
SECRET_KEY=your-secret-key-here

# API Keys (comma-separated for multiple keys)
API_KEYS=your-api-key-1,your-api-key-2

# RabbitMQ Configuration
# Option 1: Use a connection URL (RECOMMENDED for CloudAMQP, RabbitMQ Cloud, etc.)
# Format: amqps://username:password@host/vhost
# Example: amqps://sukxtmgv:UDNx7D0p9kdeeda4yNzwFQQfGAb5csQF@gorilla.lmq.cloudamqp.com/sukxtmgv
RABBITMQ_URL=

# Option 2: Use individual variables (fallback if RABBITMQ_URL is not set)
# Uncomment and use these if you prefer individual configuration
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USER=guest
# RABBITMQ_PASSWORD=guest

# RabbitMQ Exchange Name
RABBITMQ_EXCHANGE=notifications.direct

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

